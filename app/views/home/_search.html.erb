
<%= form_tag( {:controller => "playlists", :action => "create"}, :validate => true, :method => "get", :remote => true, :onsubmit => "prepPlaylistRequest(event);") do %>

      	<div class="row collapse">
        	<div class="small-9 columns">
          	<%= text_field_tag(:id, nil, :validate => { :presence => true }, placeholder: 'Enter a YouTube playlist ID to search for.' ) %>
        	</div>
        	<div class="small-3 columns">
    			<%= submit_tag("Search", :class => "button postfix") %> 

  			</div>
  		</div>
<% end %> 

<script type="text/javascript">

 judge.validate(document.getElementById('id'), {
  valid: function(element) {
    element.style.border = '1px solid green';
  },
  invalid: function(element, messages) {
    element.style.border = '1px solid red';
    alert(messages.join(','));
  }
});

</script>